<beans:beans xmlns="http://www.springframework.org/schema/security"          
      xmlns:beans="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://www.springframework.org/schema/beans 
                 http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
                 http://www.springframework.org/schema/security 
                 http://www.springframework.org/schema/security/spring-security-3.2.xsd"> 

  
<http auto-config='true'>
	<intercept-url pattern="/sign*" access="ROLE_ANONYMOUS" />	
	<intercept-url pattern="/*" access="ROLE_user" />	
	<form-login login-page="/sign"  authentication-failure-handler-ref="userNameCachingAuthenticationFailureHandler" username-parameter="email" password-parameter="password" />	
	<access-denied-handler error-page="/403" />
  </http>
<authentication-manager alias="authManager">
	   <authentication-provider>
	   		<jdbc-user-service  data-source-ref="dataSource" users-by-username-query="select login, password, true from mydb.users where  login = ?"
	   			authorities-by-username-query="select login, role from mydb.user_roles where login = ?"/>	       
	   </authentication-provider>
</authentication-manager>
	
<beans:bean id="userNameCachingAuthenticationFailureHandler"   class="voting.filters.UserNameCachingAuthenticationFailureHandler">
    <beans:property name="defaultFailureUrl" value="/sign?error"/>
</beans:bean>
	
</beans:beans> 

