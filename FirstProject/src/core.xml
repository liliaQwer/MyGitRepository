<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd"
	>
<context:annotation-config/>
	<bean id="hero1" class="Hero" init-method="wakeUp" destroy-method="sleep">
		<constructor-arg value="Mario"/>
		<constructor-arg>
			<bean class="Weapon">
				<constructor-arg value="staff"/>
			</bean>
		</constructor-arg>
	</bean>	
	<bean id="hero2" class="Hero" autowire="constructor" >
		<constructor-arg value="Legolas"/>	
	</bean>	
	<bean id="hero21" class="Hero" autowire="byType">
		<constructor-arg value="Legolas21"/>				
	</bean>	
	<bean id="hero22" class="Hero" autowire="byType">
		<constructor-arg value="Legolas22"/>						
	</bean>	
	<bean id="hero3" class="Hero">
		<property name="name" value="Karlo"/>
	</bean>
	<bean id="weapon" class="Weapon" scope="prototype" autowire-candidate="false">
		<constructor-arg value="shield"/>
	</bean>
	<bean id="weapon1" class="Weapon" primary="true">
		<constructor-arg value="sword"/>
	</bean>
	<bean id="testInstance" class="Factory" factory-method="createInstance">
		<constructor-arg value="1"/>
	</bean>
	<bean id="listTest" class="Factory">
	<property  name="list">
		<list>
			<ref bean="hero1"/>
			<ref bean="hero2"/>
			
		</list>
	</property>
	</bean>
	<bean id="winner" class="Winner"/>
	<util:list id="testList">
	<value>One</value>
	<value>One</value>
	<value>One</value>	
	</util:list>

</beans>
